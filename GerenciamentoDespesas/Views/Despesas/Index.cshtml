@model X.PagedList.IPagedList<GerenciamentoDespesas.Models.Despesa>
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Common

@{
    ViewData["Title"] = "Despesas Cadastradas";
}



<div class="tabela">
    <div class="container">
        <h4>Despesas Cadastradas</h4>
        <hr />
        <div class="row">
            <div class="col-md-2 ">
                <p class="btnNovo">
                    <a asp-action="Create" class="btn btn-outline-primary btn-sm">Nova Despesa</a>
                </p>
            </div>
        </div>

        @if (TempData["Confirmacao"] != null)
        {
            <h6 class="alert alert-success">@TempData["Confirmacao"]</h6>
        }

        <div class="row justify-content-md-center">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label"><strong>Mês</strong></label>
                <div class="col-sm-9">
                    <select class="form-control-sm escolhaMes" asp-items="ViewBag.Meses"></select>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col">
                <partial name="_GastoTotalMes" />
            </div>
            <div class="col">
                <partial name="_GastoMes" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <partial name="_GastosTotais" />
            </div>
            <div class="estatisticas col">
                <div class="alert alert-info">
                    @await Component.InvokeAsync("Estatisticas")
                </div>
            </div>
        </div>
        
        <div class="tabelaPrincipal">
            <table class="table table-hover table-sm">
                <thead>
                    <tr>
                        <th>
                            Mês
                        </th>
                        <th>
                            Valor
                        </th>
                        <th>
                            Tipo da Despesa
                        </th>
                        <th>
                            Opções
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mes.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoDespesa.Nome)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DespesaId" class="btn btn-outline-info btn-sm">Atualizar</a> |
                                <a class="btn btn-outline-danger btn-sm" onclick="ExibirModal('@item.DespesaId')">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@Html.PagedListPager(Model, pagina => Url.Action("Index", "Despesas", new { pagina}), new PagedListRenderOptionsBase
{
    LiElementClasses = new string[] {"page-item"},
    PageClasses =  new string[] {"page-link"}
})


<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja prosseguir com a exclusão da despesa?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary btnExcluir">Sim</button>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Não</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @*<script src="~/js/GraficoTotalMes.js"></script>
        <script src="~/js/MetodosGerais.js"></script>
        <script src="~/js/GraficoGastoMes.js"></script>
        <script src="~/js/GraficoGastosTotais.js"></script>*@
    <script src="~/bundle.min.js"></script>
    <script>

        CarregarDadosMes();
        CarregarDadosGastosTotaisMes();
        CarregarDadosGastosTotais();

        function ExibirModal(id) {
            $('.modal').modal();

            $('.btnExcluir').on('click', function () {
                $.ajax({
                    url: "Despesas/Delete",
                    method: "POST",
                    data: { id: id },
                    success: function (data) {
                        $('.modal').modal('hide');
                        location.reload(true);
                    }
                });
            });
        }
    </script>
}